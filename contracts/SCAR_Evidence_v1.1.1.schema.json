{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/contracts/SCAR_Evidence_v1.1.1.schema.json",
  "title": "SCAR Evidence Item v1.1.1",
  "oneOf": [
    {
      "title": "InternalEvidence",
      "type": "object",
      "additionalProperties": false,
      "required": [
        "type",
        "description",
        "filename",
        "sha256"
      ],
      "properties": {
        "type": {
          "const": "InternalEvidence"
        },
        "description": {
          "type": "string"
        },
        "filename": {
          "type": "string"
        },
        "sha256": {
          "type": "string",
          "pattern": "^[A-Fa-f0-9]{64}$"
        }
      }
    },
    {
      "title": "ExternalAttestation",
      "type": "object",
      "additionalProperties": false,
      "required": [
        "type",
        "description",
        "replication_type",
        "attestor_id",
        "attestor_pubkey_fingerprint",
        "attestation_timestamp",
        "report_sha256",
        "signature",
        "vc_jwt",
        "vc_claims",
        "ct_proofs"
      ],
      "properties": {
        "type": {
          "const": "ExternalAttestation"
        },
        "description": {
          "type": "string"
        },
        "replication_type": {
          "type": "string",
          "enum": [
            "standard",
            "adversarial"
          ]
        },
        "attestor_id": {
          "type": "string",
          "format": "hostname"
        },
        "attestor_pubkey_fingerprint": {
          "type": "string",
          "pattern": "^[A-Fa-f0-9]{40}$"
        },
        "attestation_timestamp": {
          "type": "string",
          "format": "date-time"
        },
        "report_sha256": {
          "type": "string",
          "pattern": "^[A-Fa-f0-9]{64}$"
        },
        "signature": {
          "type": "string",
          "minLength": 32
        },
        "vc_jwt": {
          "type": "string",
          "minLength": 64
        },
        "vc_claims": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "jti",
            "nbf",
            "exp",
            "credentialSubject",
            "issuer",
            "credentialStatus"
          ],
          "properties": {
            "jti": {
              "type": "string",
              "minLength": 8
            },
            "nbf": {
              "type": "integer",
              "minimum": 0
            },
            "exp": {
              "type": "integer",
              "minimum": 0
            },
            "issuer": {
              "type": "string"
            },
            "credentialSubject": {
              "type": "object"
            },
            "credentialStatus": {
              "type": "object",
              "additionalProperties": false,
              "required": [
                "id",
                "type",
                "statusPurpose",
                "statusListIndex",
                "statusListCredential"
              ],
              "properties": {
                "id": {
                  "type": "string",
                  "format": "uri"
                },
                "type": {
                  "type": "string",
                  "enum": [
                    "StatusList2021Entry"
                  ]
                },
                "statusPurpose": {
                  "type": "string",
                  "enum": [
                    "revocation",
                    "suspension"
                  ]
                },
                "statusListIndex": {
                  "type": "string",
                  "pattern": "^[0-9]+$"
                },
                "statusListCredential": {
                  "type": "string",
                  "format": "uri"
                }
              }
            }
          }
        },
        "ct_proofs": {
          "type": "array",
          "minItems": 2,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "log_url",
              "log_id",
              "sct_b64",
              "inclusion_path_b64"
            ],
            "properties": {
              "log_url": {
                "type": "string",
                "format": "uri"
              },
              "log_id": {
                "type": "string",
                "pattern": "^[A-Za-z0-9+/=]+$"
              },
              "sct_b64": {
                "type": "string",
                "pattern": "^[A-Za-z0-9+/=]+$"
              },
              "inclusion_path_b64": {
                "type": "array",
                "minItems": 1,
                "items": {
                  "type": "string",
                  "pattern": "^[A-Za-z0-9+/=]+$"
                }
              }
            }
          }
        }
      }
    }
  ]
}
